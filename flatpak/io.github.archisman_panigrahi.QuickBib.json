{
  "app-id": "io.github.archisman_panigrahi.QuickBib",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.9",
  "sdk": "org.kde.Sdk",
  "sdk-extensions": [
    "org.kde.Sdk.Extension.python3"
  ],
  "command": "quickbib",
  "modules": [
    {
      "name": "pip-and-meson",
      "buildsystem": "simple",
      "build-commands": [
        "python3 -m pip install --no-deps --prefix=/app -r requirements.txt",
        "meson setup builddir --prefix=/app",
        "meson compile -C builddir",
        "meson install -C builddir"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
  }
  ],
  "finish-args": [
    "--share=network"
  ]
}
